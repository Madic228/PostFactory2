<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PostFactory2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвет текста для EditText, Spinner, CheckBox -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlHighlight">@color/active_color</item>
        <item name="android:colorControlActivated">@color/active_color</item>
        <item name="android:colorControlNormal">@color/inactive_color</item>

        <!-- Цвет фона для EditText -->
        <item name="android:editTextBackground">@drawable/rounded_edit_text_background</item>
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>

        <!-- Цвет выделения и нажатия для CheckBox -->
        <item name="android:checkboxStyle">@style/CustomCheckboxStyle</item>
    </style>

    <style name="Theme.PostFactory2" parent="Base.Theme.PostFactory2" />
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/rounded_spinner_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/active_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>

