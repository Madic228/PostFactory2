<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Заглушка логотипа -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/postfactorylogo" />

        <!-- Приветствие -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Добро пожаловать на POST.factory"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Описание -->
        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Войдите в аккаунт и запустите свою фабрику уникального контента"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center" />
    <!-- Контейнер кнопок -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        :layout_constraintBottom_toBottomOf="parent">
        <!-- Кнопка авторизации -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#000000"
            android:text="Авторизация"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />

        <!-- Кнопка регистрации -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F4F4F4"
            android:strokeWidth="@integer/material_motion_duration_long_2"
            android:strokeColor="#000000"
            android:text="Регистрация"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
