<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <!-- Логотип -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST.factory"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Пустой View для заполнения пространства над информационным блоком -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Информационное сообщение -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Для регистрации в системе POST.factory необходимо отправить заявку на корпоративную почту IT-отдела"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В течение двух рабочих дней вам будет создана учетная запись и отправлены данные для входа"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Почта IT-отдела -->
        <TextView
            android:id="@+id/tv_it_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="it@postfactory.ru"
            android:textSize="18sp"
            android:textColor="#0000FF"
            android:gravity="center"
            android:autoLink="email"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка возврата -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вернуться"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
