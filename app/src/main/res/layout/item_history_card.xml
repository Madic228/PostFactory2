<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="#090909"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Название поста -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="План на день"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Дата и статус -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 декабря 2024"
                android:textColor="#6F6F6F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Не опубликовано"
                android:textColor="#3A3A3A"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Краткое содержание -->
        <TextView
            android:id="@+id/tv_excerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменения в нормативно-правовых актах..."
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="4dp" />

        <!-- Действия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Кнопка Поделиться -->
            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поделиться"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

            <!-- Кнопка Доработка -->
            <Button
                android:id="@+id/btn_regenerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доработка"
                android:backgroundTint="#43A047"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
